<%- include("header"); -%>

<%if (isAuthenticated) { %>

<main class="content">
  <div class="main__home">
    <form action="" method="POST">
      <div>
        <label for="content"></label>
        <textarea
          id="content"
          type="text"
          name="content"
          placeholder="What's On Your Mind?"
          required
          cols="30"
          rows="10"
        ></textarea>
      </div>
      <div>
        <label for="author"></label>
        <input
          id="author"
          type="text"
          name="author"
          value="<%= user.username %>"
          hidden
        />
      </div>
      <button type="submit">Post</button>
    </form>
    <% status_list.forEach(function(status) { %> <% const options = { month:
      'short', day: 'numeric' }; %> <% if (status.author !== user.username) { %>
      <div class="status">
        <p class="status__name">
          <%= status.author %> <span>@<%= status.author %> </span> · <%=
          status.createdAt.toLocaleDateString("en-US", options) %>
        </p>
        <p><%= status.content %></p>
        <p><%= status.author %></p>
        <button class="like-btn">♡</button>
      </div>
      <% } %> <% }); %>

  <% } else { %>
    <%- include("redirect"); -%>    
  <% } %>
</main>

<%- include("footer"); -%>
